      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title">Chat</h5>
                <p class="card-category">Kindly be friendly, mind your language . Please read all the <a href="#" target="_blank">Rules</a></p>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="card card-plain">
                      <div class="card-header">
                        <h5 class="card-title">{{#if user.student}}Recommended Teachers {{/if}}{{#if user.teacher}}Recommended Students {{/if}}List</h5>
                      </div>
                      {{#each recommendations}}
                        <div class="card-body">
                          <div class="alert alert-info">
                            <form action="/profile/recipient" method="POST">
                              <input type="hidden" value="{{email}}" name="recipient"/>
                              <button class="btn btn-info w-100" type="submit"><span>{{email}}</span></button>
                            </form>
                          </div>
                        </div>
                      {{/each}}
                    </div>
                  </div>
                  {{!-- Chat Window --}}
                  <div class="col-md-6">
                    <div class="card card-plain">
                      <div class="card-header">
                        <h5 class="card-title">Messages</h5>
                      </div>
                      <div class="card-body scroll" id="scroll-container">
                        <div class="alert alert-info">
                            <form action="/profile/loadMoreMessages" method="POST">
                              <input type="hidden" value="10" name="limit"/>
                              <button class="btn btn-info w-100" type="submit"><span>Load More Messages</span></button>
                            </form>
                          </div>
                        {{#each messages}}
                          <div class="alert {{#if sent}}text-right alert-success{{/if}}{{#if recieved}}text-left alert-info{{/if}}">
                            {{#if recieved}}
                              <span><b>'{{from}}'</b> - {{message}}</span>
                            {{/if}}
                            {{#if sent}}
                              <span>{{message}} - <b style="font-size: large;">'{{from}}'</b></span>
                            {{/if}}
                          </div> 
                        {{/each}}
                        <div class="alert alert-success" id="messageBox">
                          <form action="/profile/chat" method="POST">
                            From : <input type="text" class="text-right w-100" name="from" readonly="readonly" value="{{user.email}}"/>
                            To : <input type="text" class="text-right w-100" name="to" readonly="readonly" value="{{recipient}}"/>
                            <textarea name="message" class="mt-3 w-100 text-right" placeholder="message"></textarea>
                            <input type="submit" class="btn btn-success float-right mt-4" value="send">
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <div class="places-buttons">
                  <div class="row">
                    <div class="col-md-6 ml-auto mr-auto text-center">
