<div class="sidebar" data-color="white" data-active-color="danger">
      <div class="logo">
        <a href="#" class="simple-text logo-mini">
          <div class="logo-image-small">
            <img src="/img/faces/{{user.displayPic}}.jpg">
          </div>
          <!-- <p>CT</p> -->
        </a>
        <a href="#" class="simple-text logo-normal">
          {{user.name}}
          <!-- <div class="logo-image-big">
            <img src="../img/logo-big.png">
          </div> -->
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="{{#if dashboard}}active{{/if}}">
            <a href="/profile">
              <i class="nc-icon nc-bank"></i>
              <p>Dashboard</p>
            </a>
          </li>
          <li class="{{#if chat}}active{{/if}}">
            <a href="/profile/chat">
              <i class="nc-icon nc-bell-55"></i>
              <p>Chat</p>
            </a>
          </li>
          <li class="{{#if userProfile}}active{{/if}}">
            <a href="/profile/user">
              <i class="nc-icon nc-single-02"></i>
              <p>User Profile</p>
            </a>
          </li>
          {{#if user.student}}
          <li class="{{#if recommendations}}active{{/if}}">
            <a href="/profile/recommendations">
              <i class="nc-icon nc-tile-56"></i>
              <p>Teachers List</p>
            </a>
          </li>
            {{else}}
              {{#if user.teacher}}
                <li class="{{#if recommendations}}active{{/if}}">
                  <a href="/profile/recommendations">
                    <i class="nc-icon nc-tile-56"></i>
                    <p>Students List</p>
                  </a>
                </li>
                  {{else}}
                      {{#if user.admin}}
                        <li class="active-pro {{#if admin}}active{{/if}}">
                            <a href="/profile/admin">
                            <i class="nc-icon nc-spaceship"></i>
                            <p>Admin Panel</p>
                            </a>
                        </li>
                      {{/if}}
                {{/if}}
          {{/if}}
        </ul>
      </div>
